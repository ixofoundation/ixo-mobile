{
    "extends": [
        "tslint-react-recommended"
    ],
    "rules": {
        "ordered-imports": [
            false
        ],
        "quotemark": [
            false,
            "single",
            "jsx-single",
            "avoid-escape"
        ],
        "semicolon": [
            false,
            "never"
        ],
        "member-access": [
            false
        ],
        "member-ordering": [
            false
        ],
        "trailing-comma": [
            false,
            {
                "singleline": "never",
                "multiline": "always"
            }
        ],
        "no-empty": false,
        "no-submodule-imports": false,
        "no-implicit-dependencies": false,
        "no-constant-condition": false,
        "triple-equals": [
            true,
            "allow-undefined-check"
        ],
        "indent": [
            true,
            "tabs",
            2
        ],
        "ter-indent": [
            false,
            2,
            { "SwitchCase": 1 }
        ],
        "no-non-null-assertion": false,
        "curly": false,
        "no-duplicate-imports": false,
        "jsx-alignment": true,
        "jsx-no-bind": true,
        "jsx-no-lambda": false,
        "no-unused-variable": true
    }
}